# Aaroth Fresh Frontend - Production Environment Variables

# API Configuration (Replace with actual production URL)
VITE_API_BASE_URL=https://api.aarothfresh.com/api/v1
VITE_API_TIMEOUT=15000

# App Configuration
VITE_APP_NAME=Aaroth Fresh Admin V2
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=Enhanced B2B Fresh Produce Marketplace with Advanced Admin Interface

# Feature Flags - Admin V2 Enhanced Features  
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# Admin V2 Features
VITE_ENABLE_ADMIN_V2=true
VITE_ENABLE_SYSTEM_SETTINGS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ACCESSIBILITY_FEATURES=true
VITE_ENABLE_MOBILE_OPTIMIZATION=true
VITE_ENABLE_VIRTUAL_SCROLLING=true

# Authentication
VITE_TOKEN_STORAGE_KEY=token
VITE_SESSION_TIMEOUT=24

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ITEMS_PER_PAGE=20
VITE_DEBOUNCE_DELAY=300

# Performance Configuration
VITE_PERFORMANCE_BUDGET_FCP=2500
VITE_PERFORMANCE_BUDGET_LCP=4000
VITE_VIRTUAL_SCROLL_THRESHOLD=50
VITE_MEMORY_WARNING_THRESHOLD=80

# Mobile Optimization
VITE_TOUCH_TARGET_SIZE=44
VITE_MOBILE_BREAKPOINT=1024
VITE_ENABLE_TOUCH_GESTURES=true

# Accessibility Configuration
VITE_WCAG_COMPLIANCE_LEVEL=AA
VITE_COLOR_CONTRAST_RATIO=4.5
VITE_ENABLE_SCREEN_READER=true

# Production Specific
VITE_SHOW_DEBUG_INFO=false
VITE_LOG_LEVEL=error
VITE_SENTRY_DSN=
VITE_GA_TRACKING_ID=

# System Settings Configuration
VITE_SETTINGS_CATEGORIES=general,business,notifications,security,payment
VITE_SETTINGS_HISTORY_RETENTION=90
VITE_SETTINGS_BACKUP_ENABLED=true